{
    "root": true,
    "ignorePatterns": [ "projects/**/*", "dist/**/*", "node_modules/**/*" ],
    "overrides": [
        {
            "files": [ "*.ts" ],
            "extends": [
                "eslint:recommended",
                "plugin:@typescript-eslint/recommended"
            ],
            "rules": {
                "prettier/prettier": "off",
                "@typescript-eslint/no-unused-vars": "warn",
                "@typescript-eslint/no-explicit-any": "warn"
            }
        }
    ]
}
